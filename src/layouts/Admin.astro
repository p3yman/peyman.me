---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";
const title = Astro.props.title;
const description = Astro.props.description;
---

<BaseLayout title={title} description={description}>
  <div class="flex flex-col h-screen">
    <div class="flex flex-1">
      <aside class="border-r border-r-gray-lighter w-80">
        <div class="border-b border-b-gray-lighter p-4 flex justify-center">
          <a aria-current="page" href="/" class="inline-flex">
            <Image src={logo} alt="Peyman Eskandari" class="w-10" />
          </a>
        </div>
        <div class="p-4">
          <ul>
            <li>
              <a href="#">Dashboard</a>
            </li>
            <li><a href="#">Content</a></li>
            <li><a href="#">Assets</a></li>
            <li><a href="#">Settings</a></li>
            <li><a href="#">Stats</a></li>
          </ul>
        </div>
      </aside>
      <div class="p-6">
        <slot />
      </div>
    </div>
  </div>
</BaseLayout>
