---
import DefaultLayout from "../layouts/Default.astro";
import Link from "../components/Link.astro";
import StructuredData from "../components/StructuredData.astro";
---

<DefaultLayout
  title="404 - Page Not Found"
  description="Sorry, the page you're looking for doesn't exist. Browse our blog or return to the homepage."
  noindex={true}
>
  <Fragment slot="head">
    <StructuredData
      type="website"
      data={{
        name: "404 - Page Not Found",
        description: "Error page for content that could not be found.",
      }}
    />
  </Fragment>

  <div class="py-32 text-center">
    <div class="mb-8">
      <h1 class="text-6xl font-black font-serif text-gray-dark mb-4">404</h1>
      <h2 class="text-2xl font-serif text-gray-dark mb-6">Page Not Found</h2>
      <p class="text-lg text-gray mb-8 max-w-md mx-auto">
        Sorry, the page you're looking for doesn't exist. It might have been
        moved, deleted, or you entered the wrong URL.
      </p>
    </div>

    <div class="flex justify-center gap-4">
      <Link to="/"> Back to Home </Link>
      <Link to="/blog" variant="outline"> Browse Blog </Link>
    </div>

    <hr class="my-8 border-gray-lighter border-dashed" />

    <div class="mt-12">
      <h3 class="text-lg font-serif text-gray-dark mb-4">
        Maybe you are looking for one of these?
      </h3>
      <ul class="space-y-2 text-gray">
        <li>
          <a href="/blog" class="hover:text-gray-dark transition-colors">Blog</a
          >
        </li>
        <li>
          <a href="/mentoring" class="hover:text-gray-dark transition-colors"
            >Mentoring</a
          >
        </li>
        <li>
          <a
            href="mailto:salam@peyman.me"
            class="hover:text-gray-dark transition-colors">Contact</a
          >
        </li>
      </ul>
    </div>
  </div>
</DefaultLayout>
